
MDBoxLayout:
    orientation: 'vertical'
    spacing: 5
    padding: ('10dp', '10dp', '10dp', '0dp')
    
    MDLabel:
        id: header
        adaptive_height: True
        text: "[u][b] AKTasks [/b][/u]"
        markup: True
        font_size: 50
        font_color: 1, .2, 0, 1
        halign: "center"
        canvas.before:
            Color: 
                rgba: [0, 0, 0, 1]
            RoundedRectangle:
                radius: [20,20,2,2]
                size: self.size
                pos: self.pos

    ScrollView:
        id: scrollview
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        size_hint_y: None
        height: 0
        opacity: 0
        canvas.before:
            Color: 
                rgba: [0, 0, 0, 1]
            RoundedRectangle:
                radius: [7,7,20,20]
                size: self.size
                pos: self.pos
        MDList:
            id: listt


    MDTextField:
        id: taskinput
        hint_text: "Type your task here"
        md_bg_color: 1,1,1,1
        line_color_focus: 1,.2,0,1
        cursor: 1,1,1,1
        color: 1,1,1,1
        mode: "fill"
        line_color_normal: 1,1,1,.3
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        halign: "center"
        opacity: 0
        on_text_validate: app.process()